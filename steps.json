{
  "$schema": "./steps.json.schema",
  "steps": [
    {
      "question_id": "greeting",
      "question": "Hello there! Welcome to the project generator. How are you feeling today?",
      "input_type": "select",
      "options": ["Happy", "Excited", "Curious", "Tired", "Confused"]
    },
    {
      "question_id": "project_name",
      "question": "Please enter the project name",
      "input_type": "input",
      "actions": [
        {
          "type": "copy",
          "source": "./templates/feeling.txt",
          "destination": "./out/[[[ANS:project_name]]]/feeling.txt"
        },
        {
          "type": "replace",
          "files": {
            "include": ["./out/[[[ANS:project_name]]]/**/*.txt"],
            "exclude": []
          },
          "target": "[[[PROJECT_NAME]]]",
          "value": "[[[ANS:project_name]]]"
        },
        {
          "type": "replace",
          "files": {
            "include": ["./out/[[[ANS:project_name]]]/**/*.txt"],
            "exclude": []
          },
          "target": "[[[Feeling]]]",
          "value": "[[[ANS:greeting]]]"
        },
        {
          "type": "replace",
          "files": {
            "include": ["./out/[[[ANS:project_name]]]/**/*.txt"],
            "exclude": []
          },
          "target": "[[[UUID]]]",
          "value": "[[[UUIDv4]]]"
        }
      ]
    },
    {
      "actions": [
        {
          "conditions": [
            { "question_id": "project_name", "ans": { "regex": "^test" } }
          ],
          "type": "execute",
          "command": "Write-Host 'Project name is [[[ANS:project_name]]]. Have a nice day!'"
        }
      ]
    }
  ]
}
